@model IEnumerable<WebKillaDeco.Models.Category>
@using WebKillaDeco.Helpers
@{
    ViewData["Title"] = "Index";
    Layout = "/Views/Shared/_LayoutEmployee.cshtml";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a class="btn btn-success btn-sm mb-1 ml-auto" asp-action="Create">@Alias.CreateNewCategory</a>
    </div>
    <div class="card">
        <div class="card-body">
            <h1 class="text-center mb-4">@Alias.Categories</h1>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <img class="card-img-top" src="@Url.Content(item.ImageUrl)" alt="@item.Name Image">
                            <div class="card-body d-flex flex-column">
                                <h2 class="card-title text-center">@item.Name</h2>
                                @* Mostrar el icono pequeño si está disponible *@
                                @if (!string.IsNullOrEmpty(item.IconUrl))
                                {
                                    <div class="text-center mb-2">
                                        <img src="@Url.Content(item.IconUrl)" class="icon-img rounded-circle" alt="@item.Name Icon">
                                    </div>
                                }
                                <div class="mt-auto text-center">
                                    <a class="btn btn-primary btn-sm mb-1" asp-action="Edit" asp-route-id="@item.CategoryId">@Alias.Edit</a>
                                    <a class="btn btn-info btn-sm mb-1" asp-action="Details" asp-route-id="@item.CategoryId">@Alias.Details</a>
                                    <a class="btn btn-danger btn-sm mb-1" asp-action="Delete" asp-route-id="@item.CategoryId">@Alias.Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>