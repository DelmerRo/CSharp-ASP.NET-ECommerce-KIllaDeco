@model WebKillaDeco.Models.Category
@using WebKillaDeco.Helpers

@{
    ViewData["Title"] = "Create";
    Layout = "/Views/Shared/_LayoutEmployee.cshtml";
}

<div class="container my-5">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title text-center mb-4">@Alias.CreateNewCategory</h1>
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrlFile"></label>
                    <input type="file" asp-for="ImageUrlFile" class="form-control" />
                    <span asp-validation-for="ImageUrlFile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IconUrlFile"></label>
                    <input type="file" asp-for="IconUrlFile" class="form-control" />
                    <span asp-validation-for="IconUrlFile" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Crear</button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
