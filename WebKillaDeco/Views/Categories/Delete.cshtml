@model WebKillaDeco.Models.Category

@{
    ViewData["Title"] = "Eliminar Categoría";
}

<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h1 class="text-danger">Eliminar Categoría</h1>
            <h3>¿Estás seguro de que quieres eliminar esta categoría?</h3>
            <div class="mt-4">
                <h4>Detalles de la Categoría</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-2 font-weight-bold">
                        @Html.DisplayNameFor(model => model.ImageUrl): 
                    </dt>
                    <dd class="col-sm-10">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Url.Content(Model.ImageUrl)" class="img-fluid rounded border" alt="@Model.Name Image" style="max-width: 35px; height: auto;">
                        }
                    </dd>
                    <dt class="col-sm-2 font-weight-bold">
                        @Html.DisplayNameFor(model => model.IconUrl):
                    </dt>
                    <dd class="col-sm-10">
                        @if (!string.IsNullOrEmpty(Model.IconUrl))
                        {
                            <img src="@Url.Content(Model.IconUrl)" class="img-fluid rounded border" alt="@Model.Name Image" style="max-width: 35px; height: auto;">
                        }
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="CategoryId" />
                    <div class="form-group">
                        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                        <a class="btn btn-secondary" asp-action="Index">Volver a la Lista</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
